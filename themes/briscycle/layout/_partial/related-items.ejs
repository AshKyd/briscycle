<% const thisPath = page.path.replace('index.html', ''); const root =
thisPath.replace(/\/.*/, ''); const pages = site.pages.map(({title, description,
path, icon, thumb}) => ({ title, description, path: path.replace('index.html',
''), icon, thumb })); let related = pages.filter(other => { if(!root) return
other.path.split('/').length == 2; return thisPath !== other.path &&
other.path.indexOf(root) === 0; }); if(!related.length) related =
pages.filter(other => { return other.path.split('/').filter(Boolean).length ==
1; }); %>
<ul class="cards">
  <% related.forEach(item => { %>
  <li class="card">
    <a class="card__link" href="/<%= item.path %>">
      <div
        class="card__thumbnail"
        style="background-image: url('<%= item.thumb?.image %>-desktop.jpg')"
      >
        <% if(item.icon) { %><img
          class="card__icon"
          src="<%= item.icon %>"
          alt=" "
          role="presentation"
        /><% } %>
      </div>
      <div class="card__content">
        <div class="card__title h2"><%= item.title %></div>
        <p><%= item.description %></p>
      </div>
    </a>
  </li>
  <% }) %>
</ul>

<%- partial('_partial/ad-card', {post: page, index: false}) %>
