<footer class="container">

    <nav class="footer__menu card">
    <div class="card__link">
    <h2 class="footer__menu-header">Find out more</h2>
        <ol class="footer__menu-list">
          {% for item in collections.menu %}
              <li class="footer__menu-item">
              <a href="{{item.data.page.url}}">{{item.data.shortTitle}}</a>
              </li>
          {% endfor %}
        </ol>
        </div>
    </nav>

    <p class="navbar">
        Copyright &copy; {{site.copyrightYear}} <a href="https://ash.ms/">Ash Kyd</a>
        {% if page.url %}
        •
        <a 
            rel="nofollow" 
            href="https://github.com/AshKyd/briscycle/tree/master/site{{page.url}}index.md">
            Edit on Github
        </a>
        {% endif %}
    </p>
    <p class="navbar">
        <a href="/">Home</a>

        {% for post in collections.legal %}
            • <a href="{{post.url}}">
            {% if post.data.shortTitle %}
                {{post.data.shortTitle}}
            {% else %}
                {{post.data.title}}
            {% endif %}
            </a>
        {% endfor %}
    </p>
</footer>
</body>
</html>